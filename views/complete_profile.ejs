<!DOCTYPE html>
<html lang="uk">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>КМАМК Sim Racing - Реєстрація</title>
  <link rel="stylesheet" href="/styles.css" />
  <link
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    rel="stylesheet" />
</head>

<body>
  <!-- Меню (добавьте статичный HTML меню или загрузите динамически) -->
  <div id="menu-placeholder"></div>

  <div class="main-content-wrapper-registration">
    <aside class="sidebar-left"></aside>
    <main class="container">
      <div class="card auth-card">
        <h2>Реєстрація</h2>
        <p>Введіть дані латиницею.</p>
        <div id="message-container" style="display:none;"></div>

        <form id="registration-form">
          <div class="form-group">
            <label for="first_name">Ім'я:</label>
            <input type="text" id="first_name" name="first_name" required pattern="[A-Za-z]+" title="Тільки латиниця" />
          </div>
          <div class="form-group">
            <label for="last_name">Прізвище:</label>
            <input type="text" id="last_name" name="last_name" required pattern="[A-Za-z]+" title="Тільки латиниця" />
          </div>
          <button type="submit" class="btn btn-primary">Зберегти</button>
        </form>
      </div>
    </main>
    <aside class="sidebar-right"></aside>
  </div>

  <!-- Футер -->
  <div id="footer-placeholder"></div>

  <script>
    // Подгрузка меню и футера, если нужно
    document.getElementById("menu-placeholder").innerHTML = `
      <!-- Вставьте сюда статичный HTML меню -->
    `;
    document.getElementById("footer-placeholder").innerHTML = `
      <!-- Вставьте сюда статичный HTML футера -->
    `;

    // Обработка формы регистрации
    const form = document.getElementById("registration-form");
    const messageContainer = document.getElementById("message-container");

    function showMessage(text, type = "info") {
      messageContainer.style.display = "block";
      messageContainer.textContent = text;
      messageContainer.className = `alert alert-${type}`;
    }

    form.addEventListener("submit", async (event) => {
      event.preventDefault();

      const firstName = form.first_name.value.trim();
      const lastName = form.last_name.value.trim();

      // Простейшая валидация латиницы
      const latinRegex = /^[A-Za-z]+$/;
      if (!latinRegex.test(firstName) || !latinRegex.test(lastName)) {
        showMessage("Ім'я та Прізвище повинні містити лише латиницю.", "danger");
        return;
      }

      try {
        const response = await fetch("/complete-profile", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ first_name: firstName, last_name: lastName }),
        });

        if (response.ok) {
          showMessage("Профіль успішно збережено!", "success");
          // При необходимости перенаправить
          // window.location.href = "/profile";
        } else {
          const data = await response.json();
          showMessage(data.message || "Помилка при збереженні профілю.", "danger");
        }
      } catch (error) {
        console.error(error);
        showMessage("Сталася помилка. Спробуйте пізніше.", "danger");
      }
    });
  </script>
</body>

</html>
